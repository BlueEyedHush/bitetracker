nav.cyan.lighten-1(role='navigation')
    .nav-wrapper
        a#logo-container.brand-logo(href='/') food-diary

        .container
            ul.left.hide-on-med-and-down
                li(ng-repeat='item in nav.menu', ui-sref-active='active')
                    a(ui-sref='{{ item.state }}') {{ item.title }}

                li(ng-show='nav.isLoggedIn()', ng-repeat='item in nav.userMenu', ui-sref-active='active')
                    a(ui-sref='{{ item.state }}') {{ item.title }}

                li(ng-show='nav.isAdmin()', ui-sref-active='active')
                    a(ui-sref='admin') Admin

            ul.right.hide-on-med-and-down
                li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
                    a(ui-sref='signup') Sign up

                li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
                    a(ui-sref='login') Login

                li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
                    i.material-icons settings

                li(ng-show='nav.isLoggedIn()')
                    a(ui-sref='logout') Logout

            side-nav
                ul#nav-mobile.side-nav
                    li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
                        a(ui-sref='settings')
                            i.material-icons settings

                    li(ng-repeat='item in nav.menu', ui-sref-active='active')
                        a(ui-sref='{{ item.state }}') {{ item.title }}

                    li(ng-show='nav.isAdmin()', ui-sref-active='active')
                        a(ui-sref='admin') Admin

                    li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
                        a(ui-sref='signup') Sign up

                    li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
                        a(ui-sref='login') Login

                    li(ng-show='nav.isLoggedIn()')
                        a(ui-sref='logout') Logout

                a.button-collapse(href='#', data-activates='nav-mobile', data-sidenav='left', data-closeonclick=true)
                    i.material-icons menu